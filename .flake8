[flake8]
max-line-length = 100
exclude = .git,__pycache__,build,dist,venv,.env,env
# Relaxed rules - whitespace, docstrings and comment rules
# C0114: Missing module docstring
# C901: Class method should use cls as first argument
# D100: Missing docstring in public module
# D107: Missing docstring in __init__
# D200: One-line docstring should fit on one line with quotes
# D202: No blank lines allowed after function docstring
# D205: 1 blank line required between summary line and description
# D210: No whitespaces allowed surrounding docstring text
# D400: First line should end with a period
# D401: First line should be in imperative mood
# E203: Whitespace before ':'
# E261: At least two spaces before inline comment
# E501: Line too long
# W291: Trailing whitespace
# W293: Blank line contains whitespace
# W503: Line break before binary operator
ignore = C0114,C901,D100,D107,D200,D202,D205,D210,D400,D401,E203,E261,E501,W291,W293,W503
max-complexity = 12
per-file-ignores =
    __init__.py: F401